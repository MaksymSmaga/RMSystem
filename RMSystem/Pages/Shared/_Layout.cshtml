<!-- Страница Шаблонов-->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RMSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head> 
 
<body>
    <!--fixed-top фиксируем меню -->
    <header>
        <nav class="navbar fixed-top text-white navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 menuBg">
            <div class="container">
                <a class="navbar-brand text-wheat" asp-area="" asp-page="/Index">RMSystem</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-wheat" asp-area="" asp-page="/Risks/Risks">Risks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-wheat"  asp-area="" asp-page="/Risks/Edit">Add Risk</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-wheat"  asp-area="" asp-page="/Risks/Report">Report</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div >
        <main role="main" class="pb-3">
            <!-- Место вставки кода в этот шаблон-->
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted " >
        <div class="container border-black menuBg text-center"  >
            &copy; 2022 - RMSystem MSmaga
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Секция скриптов-->
    @RenderSection("Scripts", required: false)
</body>

</html>
